<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="car_repair_tree" model="ir.ui.view">
        <field name="name">car.repair.tree</field>
        <field name="model">car.repair</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Repair" multi_edit="1">
                <field name="subject" />
                <field name="receiving_tech" />
                <field name="receipt_date" />
                <field name="client" />
            </tree>
        </field>
    </record>



    <record id="view_repair_form" model="ir.ui.view">
        <field name="name">car.repair.form</field>
        <field name="model">car.repair</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="send_quotation" type="object" string="Confirm Diagnosis &amp; Send Quotation " class="btn-primary" attrs="{'invisible': [('state', 'not in', ['diagnosis'])]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_inventory_move"
                            type="object"
                            class="oe_stat_button" icon="fa-exchange"
                            string="Inventory Move" attrs="{'invisible': [('state', 'not in', ['inventory_move'])]}">
                    </button>
                </div>
                <group>
                    <group>
                        <field name="subject" required="1"/>
                        <field name="receiving_tech" />
                    </group>
                    <group>
                        <field name="priority" widget="priority"/>
                        <field name="receipt_date" />
                        <field name="scheduled_service_date" />
                        <field name="rma_number" />
                    </group>
                </group>
                <notebook>
                    <page string="General" name="general">
                        <group>
                            <group string="Client Info" name="client_info">
                                <field name="client" required="1"/>
                                <field name="contact_name" />
                            </group>
                            <group string="Contact">
                                <field name="phone" />
                                <field name="mobile" />
                                <field name="email" />
                                <field name="contact_no" />
                            </group>
                        </group>
                    </page>
                </notebook>
                <group>
                    <field name="description"/>
                </group>
                <notebook>
                    <page string="Diagnosis Information" name="diagnosis_information">
                        <group>
                            <group string="Contact">
                                <field name="image" widget="many2many_binary" options="{'preview_image': 'image_128', 'size': [200, 200]}"/>
                                <field name="note" />
                                <label for="digital_signature" string="Signature" class="oe_edit_only" />
                                <h2>
                                    <field name="digital_signature" widget="signature"/>
                                </h2>
                            </group>
                        </group>
                    </page>
                    <page string="Task List" name="task_list">
                        <group string="Task">
                            <field name="task_line" >
                                <tree editable="bottom" create="true" delete="true">
                                    <field name="task" />
                                    <field name="remark"/>
                                    <field name="document"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Parts And Services" name="parts_services">
                        <notebook>
                            <page string="Parts">
                                <group string="Parts">
                                    <field name="part_line" >
                                        <tree editable="bottom" create="true" delete="true">
                                            <field name="part"/>
                                            <!--                                            <field name="product_id"/>-->
                                            <!--                                            <field name="product_template_id"/>-->
                                            <field name="part_qty"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Services">
                                <group string="Service">
                                    <field name="service_line" >
                                        <tree editable="bottom" create="true" delete="true">
                                            <field name="service"/>
                                            <field name="service_qty"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </page>
                    <page string="Assign Technicians" name="assign_technicians">
                        <group>
                            <group >
                                <field name="assign_technicians" widget="many2many_tags" required="1"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_repair_view" model="ir.actions.act_window">
        <field name="name">Repair Action</field>
        <field name="res_model">car.repair</field>
        <!--            <field name="domain">[('picking_type_id.code','=','outgoing')]</field>-->
        <!--            <field name="view_type">tree</field>-->
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create new Service
            </p>
        </field>
    </record>


    <!--                                Top menu item                                  -->

    <menuitem id="repair_menu_root" name="Car Repair" web_icon="repair_service,static/description/car_repair.png" groups="repair_service.group_manager"/>

    <menuitem id="repair_order_menu"
              name="Repair"
              action="action_repair_view"
              parent="repair_menu_root"
              sequence="2"
              groups="repair_service.group_manager"/>

    <!--        <menuitem id="menu_repair_config"-->
    <!--            name="Configuration"-->
    <!--            parent="repair_menu_root"-->
    <!--            sequence="3"/>-->

    <!--                                End Of Menu Item                               -->


</odoo>
